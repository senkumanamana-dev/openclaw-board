generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  TODO
  IN_PROGRESS
  NEEDS_REVIEW
  DONE
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum TaskOrigin {
  HUMAN
  AI
}

model Task {
  id            String     @id @default(cuid())
  taskNumber    Int        @unique @default(autoincrement())
  title         String
  description   String?
  status        TaskStatus @default(TODO)
  priority      Priority   @default(MEDIUM)
  origin        TaskOrigin @default(HUMAN)
  tags          String[]
  position      Int        @default(0)
  isActive      Boolean    @default(false)
  storyPoints   Int?
  archived      Boolean    @default(false)
  archivedAt    DateTime?
  blockedReason String?    // Manual blocker reason (e.g., "Waiting on API access")
  startedAt     DateTime?  // When moved to IN_PROGRESS
  reviewedAt    DateTime?  // When moved to NEEDS_REVIEW
  completedAt   DateTime?  // When moved to DONE
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  comments      Comment[]
  subtasks      Subtask[]
  attachments   Attachment[]
  activities    Activity[]
  statusHistory StatusHistory[]
  // Dependencies: tasks this task is blocked by
  blockedBy     Task[]     @relation("TaskDependencies")
  // Reverse: tasks that depend on this task
  blocking      Task[]     @relation("TaskDependencies")
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Subtask {
  id        String   @id @default(cuid())
  title     String
  completed Boolean  @default(false)
  position  Int      @default(0)
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Attachment {
  id        String   @id @default(cuid())
  type      String   // 'link', 'code', 'note', 'file'
  title     String?
  content   String   // URL for links, actual content for code/notes
  mimeType  String?  // For code highlighting or file types
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Activity {
  id        String   @id @default(cuid())
  type      String   // 'created', 'status_change', 'field_update', 'comment_added', etc.
  actor     String   // 'agent' or 'human'
  field     String?  // Which field changed
  oldValue  String?  // Previous value
  newValue  String?  // New value
  taskId    String
  task      Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model StatusHistory {
  id        String     @id @default(cuid())
  status    TaskStatus
  enteredAt DateTime   @default(now())
  exitedAt  DateTime?
  duration  Int?       // Duration in seconds (calculated when exiting)
  taskId    String
  task      Task       @relation(fields: [taskId], references: [id], onDelete: Cascade)
  
  @@index([taskId, enteredAt])
}
